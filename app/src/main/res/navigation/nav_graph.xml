<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">


    <fragment
        android:id="@+id/firstFragment"
        tools:layout="@layout/first_fragment"
        android:name="Fragments.FirstFragment"
        android:label="FirstFragment" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment2"
            app:destination="@id/secondFragment" />
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        tools:layout="@layout/second_fragment"
        android:name="Fragments.SecondFragment"
        android:label="SecondFragment">

        <argument
            android:name="amount"
            app:argType="integer"
            android:defaultValue="0"/>


    </fragment>

    <fragment
        android:id="@+id/thirdFragment"
        tools:layout="@layout/third_fragment"
        android:name="Fragments.ThirdFragment"
        android:label="ThirdFragment" />

    <fragment
        android:id="@+id/fourthFragment"
        tools:layout="@layout/fourth_fragment"
        android:name="Fragments.FourthFragment"
        android:label="FourthFragment" >
    </fragment>




</navigation>